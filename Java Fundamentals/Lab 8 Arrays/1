
//You will be given a count of wagons in a train n. On the next n lines you will receive how 
//many people are going to get on that wagon. At the end print the whole train and after that 
//the sum of the people in the train.

import java.util.Scanner;

public class zadachi {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int lines = scan.nextInt();
		int[] ppl = new int[lines];
		int sum = 0;
		for (int i = 0; i < lines; i++) {
			ppl[i] = scan.nextInt();
			sum += ppl[i];
		}
		for (int i = 0; i < lines; i++) {
			System.out.print(ppl[i] + " ");
		}
		System.out.print("\n"+sum);
	}
}
