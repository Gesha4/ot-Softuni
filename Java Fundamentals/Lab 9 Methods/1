
//Create a method that prints the sign of an integer number.

import java.util.Scanner;

public class zadachi {

	public static void printSign(int arg) {
		if (arg > 0) {
			System.out.printf("The number %d is positive.", arg);
		} else if (arg < 0) {
			System.out.printf("The number %d is negative.", arg);
		} else {
			System.out.printf("The number %d is zero.", arg);
		}
	}

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		printSign(n);
	}
}
